{
  "name": "@briangershon/npm-package-minimal",
  "version": "2.0.0",
  "description": "Example of publishing an NPM module to Github package repository.",
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js"
  },
  "engines": {
    "node": ">=12.17.0"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js specs --watch",
    "test-ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js specs",
    "preversion": "npm run test-ci",
    "postversion": "git push && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/briangershon/npm-package-minimal.git"
  },
  "author": "Brian Gershon",
  "type": "module",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "jest": "^26.6.3",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-environment-node": "^26.6.2"
  },
  "jest": {
    "transform": {},
    "testEnvironment": "jest-environment-jsdom-sixteen"
  }
}
